import math, os

stop=0
days=[]
extra=[]

def daygather():
    global days
    print("Enter number of days after beehive colonization. No negatives. Type '0' when finished.")
    while True:
        line=input()
        line=(int(line))
        if line==stop:
            break
        else:
            days.append(line)
                    
def beemath():
    global days, extra
    for t in days:
        x=(100*math.sqrt(t)+201/(t+1)+1)
        x=int(x)
        extra.append(x)
            
def all():
    daygather()
    beemath()
    counter=0
    for z in days:
        print((str(days[counter])) +' '+ (str(extra[counter])))
        counter=counter+1
            
all()

'''
Total Time == not much
'''
